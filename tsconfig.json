{
	"compilerOptions": {
		"outDir": "./dist/",
		"rootDir": "./",
		"baseUrl": ".",
		"sourceMap": true,
		"noImplicitAny": false,
		"noImplicitReturns": true,
		"skipLibCheck": true,
		"module": "commonjs",
		"target": "es6",
		"paths": {
			"*": [ "node_modules/@types/*", "*"]
		}
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}